<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.androidthings.doorbell.MainActivity">

    <!--<android.support.v7.widget.RecyclerView
        android:id="@+id/doorbellView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_full_open_on_phone"
            android:id="@+id/imageViewOCRIMAGE"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textOCR"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Hello world"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/imageViewOCRIMAGE"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textOCR"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnTTS"
            android:text="Talk text"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnTTS"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnTTSStop"
            android:text="Stop Talk text"/>

    </RelativeLayout>>

</ScrollView>
